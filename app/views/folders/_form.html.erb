<%= form_for @folder do |f| %>
  <%= render "shared/form_error_messages", :target => @folder %>
  <%= f.hidden_field :cabinet_id %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>