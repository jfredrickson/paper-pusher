<% if @cabinet.errors.any? %>
  <div id="error_explanation">
    <h2>The cabinet couldn't be created due to <%= pluralize(@cabinet.errors.count, "error") %>:</h2>
    <ul>
    <% @cabinet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= fields_for @cabinet do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
<% end %>